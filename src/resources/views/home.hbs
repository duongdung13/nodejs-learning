<div class='container'>
    <h1>PAGE HOME</h1>
     
    <div class="mt-4">
        <div class="row">
            {{#each courses }}
                <div class="card" style="width: 18rem; margin:5px;">
                <img class="card-img-top" style="height: 200px;" src="{{ this.image }}" alt="{{ this.name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ this.name }}</h5>
                    <p class="card-text">{{ this.description }}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
                </div>
            {{/each}}
        </div>
    </div>
    
</div>
<div class='container'>
    <h1>Danh sách khoá học</h1>
    <div class='mt-4'>
        <div class='row'>
            <a href='courses/create' class='btn btn-success'>Tạo mới khóa học</a>
        </div>
        <div class='row'>
            {{#each courses}}
                <div class='card' style='width: 18rem; margin:5px;'>
                    <a href='/courses/{{this.slug}}'>
                        <img
                            class='card-img-top'
                            style='height: 200px;'
                            src='{{this.image}}'
                            alt='{{this.name}}'
                        />
                    </a>
                    <div class='card-body'>
                        <h5 class='card-title'>
                            <a href='/courses/{{this.slug}}'>
                                {{this.name}}
                            </a>
                        </h5>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='/courses/edit/{{this._id}}' class='btn btn-primary'>Sửa</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>